<div class="row">
<div class="account-form">
<h1>Sign up</h1>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { multipart: true }) do |f| %>
<%= render 'shared/devisenotification' %>
  <div class="form-group">
    <%= f.text_field :fullname, autofocus: true, class:"form-control", placeholder: "Full Name"%>
    <i class="fa fa-user"></i>
  </div>

  <div class="form-group">
    <%= f.email_field :email,class:"form-control", placeholder: "Email"%>
    <i class="fa fa-envelope"></i>
  </div>

  <div class="form-group">
    <% if @validatable %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "off", class:"form-control", placeholder:"Password" %>
    <i class="fa fa-lock"></i>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class:"btn log-btn form-group"%>
  </div>
<% end %>

<div class="actions">
  <%= link_to "Login With Facebook", user_facebook_omniauth_authorize_path, class:"btn log-btn form-group"%>
</div>
<div class="actions">
  <%= link_to "Login With Google ", user_google_oauth2_omniauth_authorize_path, class:"btn log-btn form-group"%>
</div>

</div>
</div>
